{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Angular (No Browser)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/smart-render-lab",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"], 
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": ".NET Core Launch (Backend)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/smart-render-service/SmartRenderService/bin/Debug/net10.0/SmartRenderService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/smart-render-service/SmartRenderService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
  ],
  "compounds": [
    {
      "name": "Full Stack (Backend + Frontend)",
      "configurations": [
        ".NET Core Launch (Backend)",
        "Angular (No Browser)"
      ]
    }
  ]
}